# Required Settings
DISCORD_TOKEN=your_discord_token_here
BOT_PREFIX=!

# Cog Configuration
# Default cogs that will be installed on first run
# Example: DEFAULT_COGS=general,admin,mod
DEFAULT_COGS=general,admin,mod,alias,customcom,downloader,permissions,streams,cleanup

# Additional cogs to install (comma-separated)
# Example: REDBOT_COGS=audio,economy,trivia
REDBOT_COGS=

# Audio Configuration
# Set to "true" to enable audio features
ENABLE_AUDIO=true

# Lavalink Configuration
# Set USE_LAVALINK to "true" to use an external Lavalink server
USE_LAVALINK=false
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass
# Optional: Set to "true" to use secured Lavalink connection (SSL/TLS)
LAVALINK_SSL=false
# Optional: Set custom Lavalink nodes (JSON format)
# LAVALINK_NODES=[{"host": "host1", "port": 2333, "password": "pass1", "ssl": false}, {"host": "host2", "port": 2333, "password": "pass2", "ssl": true}]

# Locale Configuration (optional)
# Default: en-US
REDBOT_LOCALE=en-US

# Advanced Settings
# These are optional and can be left as-is for most users

# Maximum memory usage for audio caching (in MB)
# AUDIO_CACHE_SIZE=100

# Number of concurrent audio downloads
# AUDIO_MAX_DOWNLOADS=4

# Set to "true" to enable debug logging
# DEBUG=false

# Note: Additional environment variables can be added based on your needs
# Refer to Red-DiscordBot documentation for more configuration options
